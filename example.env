# Database
DB_HOST=127.0.0.1
DB_NAME=finportal
DB_USER=root
DB_PASS=

# Session
SESSION_NAME=finportal_session

# OAuth
# Optional: override computed callback URL (defaults to https://<host>/auth_google_callback.php)
GOOGLE_REDIRECT_URI=
# Comma-separated list of allowed hosts for OAuth redirects
ALLOWED_OAUTH_HOSTS=portal.example-finance.com
# Canonical host used when building redirect URLs
APP_HOST=portal.example-finance.com

# WebSocket integration
WS_PUBLIC_URL=wss://ws.example-finance.com
WS_ADMIN_TOKEN=change-me
ADMIN_TOKEN=change-me
WS_BROADCAST_URL=http://127.0.0.1:8766/admin/broadcast
WS_SERVER_HOST=127.0.0.1
WS_SERVER_PORT=8787
WS_ADMIN_PORT=8766
WS_ALLOWED_ORIGINS=https://portal.example-finance.com

# Rate limiting backend (file|redis)
RATE_LIMIT_BACKEND=file
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_TIMEOUT=1.5
REDIS_AUTH=
REDIS_DB=
